# Environment Variables for Amazon Buy Box Analyzer
# Copy this file to .env and update with your actual values
# DO NOT commit .env to version control

# =============================================================================
# AMAZON SP-API CONFIGURATION
# =============================================================================
# Obtain these credentials from Amazon Seller Central:
# Apps & Services > Develop Apps > Your App > LWA Credentials
#
# For setup instructions, see:
# https://developer-docs.amazon.com/sp-api/docs/registering-your-application

# Your LWA Refresh Token (obtained during app authorization)
SP_API_REFRESH_TOKEN=

# Your LWA Client ID (from app credentials)
SP_API_CLIENT_ID=

# Your LWA Client Secret (from app credentials)
SP_API_CLIENT_SECRET=

# US Marketplace ID (fixed for this application)
SP_API_MARKETPLACE_ID=ATVPDKIKX0DER

# =============================================================================
# FILE PATHS
# =============================================================================
OUTPUT_PATH=./output
LOG_PATH=./logs

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
ENVIRONMENT=development
DEBUG_MODE=false
APP_NAME=Amazon_BuyBox_Analyzer
LOG_LEVEL=INFO
